<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>erros.
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit "Update Book" %>
  
  <span>
    <%= link_to "Show", book_path(@book.id) %>
  </span>
  <span>
    <%= link_to "Back", "/books" %>
  </span>
  
<% end %>

